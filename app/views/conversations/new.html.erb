<div class="banner" style="background-image: url(https://www.pngmagic.com/webp_images/Off-white-background-image.webp);">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mx-2">
      <div>
        <h1 class="m-0">Robobo</h1>
        <p class="m-0">Your language assistant</p>
      </div>
      <%= image_tag "robobo.png", alt: "Robobo Mascot", width: 64 %>
    </div>
  </div>
</div>
<div class="container py-5">
  <% if user_signed_in? %>
    <!-- Signed-in: show the form -->
    <div class="card mb-3">
      <div class="card-body">
        <%= form_with model: @conversation, url: conversations_path, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :title, "Title (optional)" %>
            <%= f.text_field :title, class: "form-control", placeholder: "e.g., Reading practice on „Äú„Å¶„ÅÑ„Çã" %>
          </div>
          <div class="mb-3">
            <%= f.label :submitted_text, "Your Japanese Text" %>
            <%= f.text_area :submitted_text, class: "form-control", rows: 6,
                  placeholder: "Ë≤º„Çä‰ªò„Åë„Å¶„Åè„Å†„Åï„ÅÑÔºàPaste your Japanese text hereÔºâ" %>
          </div>
          <div class="d-flex gap-2">
            <%= f.submit "Start Conversation", class: "btn btn-primary" %>
            <%= link_to "Cancel", conversations_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
    <%# -------------------------------------------------------------------------------------------------------- %>
    <div class="d-flex justify-content-end">
      <%#= link_to "Our Past Conversations", conversations_path, class: "btn btn-outline-secondary btn-sm" if user_signed_in? %>
      <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Our past conversations</button>

        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
          <div class="offcanvas-header">
            <h5 id="offcanvasRightLabel">Our past conversations</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
          <%#  %>
          <div class="container my-4">
            <div class="d-flex justify-content-center align-items-center">
              <%= image_tag "robobo.png", alt: "Robobo Mascot", width: 80 %>
              <h1 class="m-0">Our Conversations</h1>
            </div>
            <% if @conversations.any? %>
              <% @conversations.each do |conversation| %>
                <div class="row my-3">
                  <div class="col-12 d-flex align-items-center">
                    <i class="fa-solid fa-book text-primary fs-1 me-2"></i>
                    <%= link_to conversation_path(conversation), class: "w-100 text-decoration-none text-dark" do %>
                      <div class="title-wrapper">
                        <h3 class="m-0"><%= conversation.title.presence || "Conversation ##{conversation.id}".truncate(80) %></h3>
                      </div>
                    <% end %>
                    <%= link_to conversation_path(conversation),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "d-flex bg-primary text-light align-items-center rounded-5 px-2 rounded-start h-100 text-light text-decoration-none" do %>
                      <i class="fa-solid fa-xmark"></i>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-center text-muted py-5 border rounded">
                <p class="mb-3">No conversations yet.</p>
                <%= link_to "Start your first conversation", new_conversation_path, class: "btn btn-primary" %>
              </div>
            <% end %>
</div>
          <%#  %>
          </div>
        </div>
    </div>
    <%# -------------------------------------------------------------------------------------------------------- %>
  <% else %>
    <!-- Guest: CTA to log in or sign up -->
    <div class="text-center mb-5">
      <p class="lead mb-5">Please log in or sign up to start chatting with Robobo:</p>
      <%= link_to "Log In", new_user_session_path, class: "btn btn-outline-primary me-2" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
    </div>
    <div class="container">
      <div class="d-flex justify-content-end align-items-center">
        <div class="chat-bubble user mb-4 w-75 ">
          <p>„Åù„Çì„Å™„Åì„Å®„Å†„Çç„ÅÜ„Å®ÊÄù„Å£„Åü„Çà</p>
        </div>
      </div>
      <div class="chat-bubble ai w-75">
        <p>‚ÄúThat's what I thought.‚ÄùThis phrase often has a slightly resigned or knowing tone.For example: ...</p>
      </div>
    </div>
    <!-- Demo conversation -->
    <% if defined?(@demo_conversation) && @demo_conversation.present? %>
      <hr class="my-5" />
      <h2 class="h4 mb-3">üí¨ Demo Conversation</h2>
      <div class="list-group">
        <% @demo_conversation.responses.order(:created_at).each do |r| %>
          <div class="list-group-item d-flex <%= r.role == "user" ? 'justify-content-end' : 'justify-content-start' %>">
            <div class="<%= r.role == "user" ? 'bg-primary text-white' : 'bg-light' %> rounded-3 px-3 py-2" style="max-width: 720px;">
              <div class="small text-muted mb-1"><%= r.role == "user" ? "You" : "Robobo" %></div>
              <div><%= r.content %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
